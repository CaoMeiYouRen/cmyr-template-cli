{
  "name": "cmyr-template-cli",
  "version": "1.22.7",
  "description": "草梅友仁自制的项目模板创建器",
  "author": "CaoMeiYouRen",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "commonjs",
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "ct": "dist/index.js",
    "cmyr-template": "dist/index.js"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production rollup -c",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "dev:rollup": "cross-env NODE_ENV=development rollup -c",
    "rm": "rimraf node_modules",
    "start": "node ./dist/index",
    "release": "semantic-release",
    "commit": "cz",
    "create": "ct create",
    "build:dev": "rimraf dist && cross-env NODE_ENV=development rollup -c && rimraf temp && cross-env NODE_ENV=development ct create",
    "build:prod": "npm run build && rimraf temp && cross-env NODE_ENV=production ct create"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^5.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/debug": "^4.1.5",
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.165",
    "@types/node": "^20.0.0",
    "@types/promise.any": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^4.0.0",
    "conventional-changelog-cmyr-config": "^2.1.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog-cmyr": "^1.0.0",
    "debug": "^4.3.1",
    "eslint": "8.42.0",
    "eslint-config-cmyr": "^1.1.27",
    "husky": "^8.0.1",
    "lint-staged": "^15.0.1",
    "rimraf": "^5.0.0",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "21.1.2",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@lint-md/core": "^2.0.0",
    "axios": "^1.0.0",
    "colors": "^1.4.0",
    "commander": "^11.0.0",
    "dayjs": "^1.9.6",
    "download-git-repo": "^3.0.2",
    "ejs": "^3.1.6",
    "fs-extra": "^11.0.0",
    "json5": "^2.2.1",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "ora": "^5.4.1",
    "plop": "^2.7.6",
    "promise.any": "^2.0.2",
    "tslib": "^2.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  }
}
