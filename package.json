{
  "name": "cmyr-template-cli",
  "version": "1.41.5",
  "description": "草梅友仁自制的项目模板创建器",
  "author": "CaoMeiYouRen",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "commonjs",
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "ct": "dist/index.js",
    "cmyr-template": "dist/index.js"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint . --fix",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsup",
    "dev": "cross-env NODE_ENV=development tsx --watch src/index.ts",
    "dev:tsup": "cross-env NODE_ENV=development tsup --watch",
    "rm": "rimraf node_modules",
    "start": "node ./dist/index.js",
    "release": "semantic-release",
    "commit": "cz",
    "create": "ct create",
    "build:dev": "rimraf dist && cross-env NODE_ENV=development tsup && rimraf temp && cross-env NODE_ENV=development ct create",
    "build:prod": "npm run build && rimraf temp && cross-env NODE_ENV=production ct create"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@types/debug": "^4.1.5",
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^11.0.0",
    "@types/inquirer": "^9.0.3",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/lodash": "^4.14.165",
    "@types/node": "^24.0.7",
    "commitizen": "^4.3.1",
    "commitlint-config-cmyr": "1.0.0",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog-cmyr": "2.0.0",
    "debug": "^4.3.1",
    "eslint": "^9.34.0",
    "eslint-config-cmyr": "2.0.0",
    "husky": "^9.0.5",
    "lint-staged": "^16.1.0",
    "rimraf": "^6.0.0",
    "semantic-release": "24.2.9",
    "semantic-release-cmyr-config": "1.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.20.5",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "@lint-md/core": "^2.0.0",
    "acorn": "^8.12.1",
    "acorn-walk": "^8.3.3",
    "axios": "^1.0.0",
    "commander": "^14.0.0",
    "dayjs": "^1.9.6",
    "download-git-repo": "^3.0.2",
    "ejs": "^3.1.6",
    "fs-extra": "^11.0.0",
    "json5": "^2.2.1",
    "libsodium-wrappers": "^0.7.15",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "ora": "^5.4.1",
    "plop": "^2.7.6",
    "tslib": "^2.4.0",
    "yaml": "^2.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  }
}
